<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/quest.css" />
    <title>Question 2_1</title>
    <link rel="icon" href="/img/favicon-32x32.png" />
    <script>
      let hintNum = 0;
      const hints = [
        "This is hint 1",
        "This is hint 2",
        "This is hint 3",
        "This is hint 4",
        "This is hint 5",
        "No more hints available",
      ];

      const showHint = () => {
        if (hintNum > 4) hintNum = 5;
        alert(hints[hintNum++]);
      };
    </script>
  </head>

  <body>
    <div class="container">
      <div class="header">
        <h1>BACKSLASH</h1>
      </div>
      <div class="progress-bar"></div>
      <div class="question">
        <h2>QUESTION 2_1</h2>

        <p class="cyberpunk">
          Find the missing number ?
          <img src="/img/hurdle2.jpg" alt="" />
        </p>
        <form action="/little-china/2_1" method="POST">
          <div class="textarea">
            <input
              type="text"
              class="textarea"
              name="answer"
              id="answer"
              placeholder="Enter your Answer here"
            />
          </div>
          <button class="cyberpunk2077" type="button" onclick="showHint()">
            Use a hint
          </button>
          <button class="cyberpunk2077" type="submit">SUBMIT</button>
        </form>
      </div>
      <div class="log-out">
        <div class="team-name">
          <h3><%= team %></h3>
          <a href="/logout"> <button class="cyberpunk2077">LOG OUT</button></a>
        </div>
      </div>
    </div>
  </body>
</html>
